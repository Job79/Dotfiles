#
# ~/.mkshrc
#

# If not running interactively, don't do anything
[[ $- != *i* ]] && return

# Useful aliases
alias b='bash'
alias n='nnn'
alias ls='ls -CF --color=auto'
alias myip='curl api.ipify.org'
alias cdf='cd "$(find . \( ! -regex ".*/\..*" \) -type d 2>/dev/null | fzf)"'
alias cdfh='_(){ cd "$(find . -type d 2>/dev/null | fzf)" }'

# Shortcuts
bind '^L'=clear-screen

# Monitor config
#alias monitor_mirror='xrandr --output HDMI-1 --auto --same-as eDP-1'
#alias monitor_on='xrandr --output HDMI-1 --auto --above eDP-1'
#alias monitor_off='xrandr --output HDMI-1 --off'

# Set prompt
PS1=$'\e[36m$(if [[ "${PWD#$HOME}" = "$PWD" ]] then echo -n "$PWD"; else echo -n "~${PWD#$HOME}"; fi;)\e[0m\e[1m > \e[0m'

# Enable history
HISTFILE="$HOME/.sh_history"
