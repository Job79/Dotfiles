#
# ~/.mkshrc
#

# If not running interactively, don't do anything
[[ $- != *i* ]] && return

# Useful aliases
alias b='bash'
alias n='nnn -C'
alias c='clear'
alias ls='ls -CF --color=auto'
alias myip='curl ipv4.icanhazip.com'
alias fsearch='_(){ find . -name "$2" | xargs grep -i "$1"; }; _'

# Colors when using pacman with less
alias less='less -R'
alias pacman='pacman --color=always'

# Monitor config
alias monitor_mirror='xrandr --output HDMI-1 --auto --same-as eDP-1'
alias monitor_on='xrandr --output HDMI-1 --auto --above eDP-1'
alias monitor_off='xrandr --output HDMI-1 --off'

# Enviroment variables
export JAVA_HOME=/usr/lib/jvm/java-14-openjdk
export VISUAL=nvim
export EDITOR=$VISUAL

# Set prompt
PS1=$'\E[34m$(if [[ "${PWD#$HOME}" = "$PWD" ]] then echo -n "$PWD"; else echo -n "~${PWD#$HOME}"; fi;)\E[0m âž¤ '

# Enable history
HISTFILE="$HOME/.sh_history"
