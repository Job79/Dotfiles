# Rstatus configuration file.
# see "man i3status" for documentation.

# It is important that this file is edited as UTF-8.
# The following line should contain a sharp s:
# ÃŸ
# If the above line is not correctly displayed, fix your editor first!

general {
        markup="pango"
        interval = 30
        separator=""
}

order += "memory"
order += "battery 0"
order += "tztime local"

tztime local{
	format = "  <span color='#187a2a'><b>[</b></span>%time<span color='#187a2a'><b>]</b></span>  "
	format_time = "%H:%M"
}
battery 0{
    format = "  <span color='#187a2a'><b>[</b></span>%percentage<span color='#187a2a'><b>]</b></span>"
    last_full_capacity = true
}
memory {
        format = "<span color='#187a2a'><b>[</b></span>%used<span color='#187a2a'><b>]</b></span>"
}
