jmtpfs

# Install yay
fakeroot binutils make gcc	# Used for building packages
#-> git clone https://aur.archlinux.org/yay.git
#-> cd yay
#-> makepkg -si

# Powertop (Laptop only)
# Create file /etc/systemd/system/powertop.service
# with content: "
[Unit]
Description=Powertop tunings

[Service]
Type=exec
ExecStart=/usr/bin/powertop --auto-tune
RemainAfterExit=true

[Install]
WantedBy=multi-user.target
"

## Touchpad click on tap
# Create file /etc/X11/xorg.conf.d/90-touchpad.conf
# with content: "
Section "InputClass"
        Identifier "touchpad"
        MatchIsTouchpad "on"
        Driver "libinput"
        Option "Tapping" "on"
        Option "TappingButtonMap" "lrm"
        Option "ScrollMethod" "twofinger"
EndSection
"

# Fix java dwm
# Create file "/etc/profile.d/jre.sh"
# with content: "
export _JAVA_AWT_WM_NONREPARENTING=1
"
