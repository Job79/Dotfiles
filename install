# Basic tools
nvim 			        # Editor
git                             # Version control
nnn 			        # File manager
feh	        		# Image viewer/background
aria2                           # Torrent client
scrot			        # Screenshots
picom                           # Compositor
firefox-developer-edition	# Browser
connman                         # Network manager

# Install WM : dwm 
xorg-server xorg-xinit dmenu

# gtk dark theme
# config: .config/gtk-3.0/settings.ini
# content: "
[Settings]
gtk-application-prefer-dark-theme=true
"

# doas (simple sudo replacement)
opendoas
# config: /etc/doas.conf "permit persist :wheel"

### Optional
# wifi (iwd)
# enable dhcp config: (/etc/iwd/main.conf): "
[General]
EnableNetworkConfiguration=true
"

# Audio
pulseaudio
pulsemixer

# Multiple screens
xorg-xrandr

# Android phone
jmtpfs

# Install trizen (AUR helper) 
fakeroot binutils make gcc      # Used for building packages
#-> git clone https://aur.archlinux.org/trizen.git
#-> cd trizen 
#-> makepkg -si

# Powertop
# Create file /etc/systemd/system/powertop.service
# with content: "
[Unit]
Description=Powertop tunings

[Service]
Type=exec
ExecStart=/usr/bin/powertop --auto-tune
RemainAfterExit=true

[Install]
WantedBy=multi-user.target
"

## Touchpad click on tap
# Create file /etc/X11/xorg.conf.d/90-touchpad.conf
# with content: "
Section "InputClass"
        Identifier "touchpad"
        MatchIsTouchpad "on"
        Driver "libinput"
        Option "Tapping" "on"
        Option "TappingButtonMap" "lrm"
        Option "ScrollMethod" "twofinger"
EndSection
"

# Fix java gui dwm
# Create file "/etc/profile.d/jre.sh"
# with content: "export _JAVA_AWT_WM_NONREPARENTING=1"
